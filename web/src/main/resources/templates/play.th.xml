    <attr sel="#main-message"
            th:text="${MAIN_MESSAGE}" />

    <attr sel="#result-message"
          th:text="${RESULT_MESSAGE}" />

    <attr sel="#game-form"
          th:action="@{play}" />

    <attr sel="#footerId"
          th:replace="~{fragments/footer :: footerFragment}" />
</thlogic>